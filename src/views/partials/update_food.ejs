<!-- https://github.com/expressjs/method-override/issues/13 -->
<!DOCTYPE html>
<html lang="de" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Foodsharing</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="header">
      <h1>Foodsharing</h1>
      <div class="header_formwrapper">
        <form class="header_form" method="GET" action="/chat/chats_list">
          <button class="header_submit" type="submit">Nachrichten</button>
        </form>
        <form class="header_form" method="post" action="/logout">
          <button class="header_submit" type="submit">Logout <%= name %></button>
        </form>
      </div>
    </div>

    <div class="header_space"></div>

    <div class="food_wrapper">
      <!-- integration of error messages -->
    <%- include ('./error') %>

    <form class="dashboard_button" method="GET" action="/dashboard">
      <button class="dashboard_button" type="submit">Zur√ºck zum Dashboard</button>
    </form>

    <!-- form -->
    <h2 class="food_h2">Essen bearbeiten</h2 class="food_h2">
    <form id="update_food" method="post" action="/updatefood/<%= foodItem.id%>">
      <div>
        <label class="form_description">Title</label>
        <input class="form_input" name="title" id="title" value="<%= foodItem.title%>" placeholder="Enter text" type="text">
        <br>
        <label class="form_description">Description</label>
        <input class="form_input" name="description" id="description" value="<%= foodItem.description%>" placeholder="Enter text" type="text">
        <br>
        <label class="form_description">Category</label>
        <select class="form_input" name="category" id="category" value="<%= foodItem.category %>">
          <option selected value="<%= foodItem.category %>"><%= foodItem.category %></option>
          <% for(let i = 0; i < categories.length; i++) { %>
            <% if(categories[i] !== foodItem.category) { %>
              <option><%= categories[i] %></option>
            <% } %>
          <% } %>
        </select>
        <br>
        <label class="form_description">City</label>
        <input class="form_input" name="city" id="city" value="<%= foodItem.city%>" placeholder="<%= foodItem.city%>" type="text">
        <br>
        <label class="form_description">Zipcode</label>
        <input class="form_input" name="zipcode" id="zipcode" value="<%= foodItem.zipcode%>" placeholder="" type="number">
        <br>
        <label class="form_description">Street</label>
        <input class="form_input" name="street" id="street" value="<%= foodItem.street%>" placeholder="Enter text" type="text">
        <br>
        <label class="form_description">Streetnumber</label>
        <input class="form_input" name="streetnumber" id="streetnumber" value="<%= foodItem.streetnumber%>" placeholder="Enter number" type="number">
        <br>
        <button class="form_submit" type="submit">Speichern</button class="form_input">
      </div>
    </form>
    </div>
  </body>
</html>
